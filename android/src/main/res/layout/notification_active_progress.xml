<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:background="@drawable/ap_card_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ap_small_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@null"
            android:tint="@color/ap_icon_tint"
            android:src="@android:drawable/stat_sys_download"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ap_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/ap_text_primary"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Workingâ€¦" />

            <TextView
                android:id="@+id/ap_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/ap_text_secondary"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Please wait" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ap_large_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/ap_subtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ap_text_hint"
        android:visibility="gone"
        android:textSize="12sp"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp">

        <ProgressBar
            android:id="@+id/ap_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/ap_progress_bar" />

        <TextView
            android:id="@+id/ap_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/ap_text_primary"
            android:text=""/>
    </LinearLayout>
</LinearLayout>
