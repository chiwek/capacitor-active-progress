    <TextView
            android:id="@+id/ap_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workingâ€¦" />

    <TextView
            android:id="@+id/ap_text"
